{
    "name"      :   "flatpak",
    "search"    : [ "flatpak search --columns=name,application,description {package}", "{name}\t{id}\t{summary}\n" ],
    "install"   :   "flatpak install -y {package}",
    "uninstall" :   "flatpak remove -y {package}",
    "update"    :   "flatpak update {package}",
    "update-all":   "flatpak update",
    "installed" : [ "flatpak list --columns=name,application,description", "{name}\t{id}\t{summary}\n" ],
    "updatable" : [ "flatpak remote-ls --updates --columns=name,application,description", "{name}\t{id}\t{summary}\n" ],
    "info"      : [ "flatpak search --columns=name,application,description {package}", "{name}\t{id}\t{summary}\n" ],
    "repos"     : [ "flatpak remotes --columns=title,url", "{name} {url}\n"]
}