{
    "name"      :   "pacman",
    "rev-dns"   :   false,
    "search"    : [ "pacman -Ss {package}", "{id} {} {}\n {summary}" ],
    "install"   :   "pacman -Syu {package}",
    "uninstall" :   "pacman -Rsc {package}",
    "update"    :   "pacman -Syu {package}",
    "update-all":   "pacman -Syu",
    "installed" : [ "pacman -Q", "{id} {} {}\n {summary}" ],
    "updatable" : [ "pacman -Qu", "{id} {} {}\n {summary}" ],
    "info"      : [ "pacman -Si {package}", "Name {}: {id} {}Description {}: {description}" ]
}