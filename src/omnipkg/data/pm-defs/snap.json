{
    "name"      :   "snap",
    "search"    : [ "snap find {package}", "{id} {summary}\n" ],
    "install"   :   "snap install {package}",
    "uninstall" :   "snap remove {package}",
    "update"    :   "snap refresh {package}",
    "update-all":   "snap refresh",
    "installed" : [ "snap list", "{id} {summary}\n" ],
    "updatable" : [ "snap refresh --list", "{id} {summary}\n" ],
    "info"      : [ "snap info --verbose {package}", "name:{:s}{id}\nsummary:{:s}{summary}\n{}:{:s}- {website:S}\nlicense:{}description: |\n{description}notes:"],
    "remotes"   : [ "echo Snapcraft", "{remote}\n"]
}